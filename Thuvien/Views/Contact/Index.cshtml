                        color: #fff;
                        letter-spacing: 1px;
                        width: 30%;
                        padding: 10px 0;
                        font-size: 1em;
                        margin: 2em 1em 0 0;
                        -webkit-appearance: none;
                        background: #34c663;
                        transition: 0.5s all;
                        -webkit-transition: 0.5s all;
                        font-family: 'Merriweather Sans', sans-serif;
                        -moz-transition: 0.5s all;
                    }

