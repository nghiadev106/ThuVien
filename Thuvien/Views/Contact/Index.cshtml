                <!-- contact form grid -->
                <div class="contact-top1">
                    <h5>send us a note</h5>
                    <input type="text" id="firstname" placeholder="First Name" required="">
                    
                    <input type="text" id="lastname" placeholder="Last Name" required="">

                    <input class="email" type="email" id="email" placeholder="Email" required="">
                    <textarea placeholder="Message" id="noidung" required=""></textarea>
                    <input type="button" onclick="return guilienhe()" name="submit" value="Submit">
