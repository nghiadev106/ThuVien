
@{
    ViewBag.Title = "Phieuchuatra";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@model IEnumerable<ThuVien.Models.muontra>

<section class="content-header">
    <h1>
        Danh sách phiếu mượn chua trả
        <small>phiếu mượn</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        @*<li><a href="#">Tables</a></li>*@
        <li class="active">phiếu mượn</li>
    </ol>
</section>
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Mã phiếu</th>
                                <th>Ngày mượn</th>
                                <th>Độc giả</th>
                                <th>Trang thái</th>
                                <th>Option</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td><label class="label label-info">@item.maphieu</label></td>
                                        <td><label class="label label-primary">@string.Format("{0:dd-MM-yyyy}", item.ngaymuon)</label></td>
                                        <td><label class="label label-warning">@{@item.docgia.tendocgia} (@item.sothe)</label></td>
                                        <td>
                                            @if (item.trangthai == true)
                                            {
                                                <label class="label label-success">đã trả</label>
                                            }
                                            @if (item.trangthai == false)
                                            {
                                                <label class="label label-danger">chưa trả</label>
                                            }
                                        </td>
                                        <td>
                                            <a href="@Url.Action("Deltai","Muontra",new { id=item.maphieu })" class="btn btn-success btn-sm fa fa-eye"></a>
                                        </td>
                                    </tr>
    }
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>



