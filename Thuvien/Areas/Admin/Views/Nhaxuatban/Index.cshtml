
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@model IEnumerable<ThuVien.Models.nxb>

<section class="content-header">
    <h1>
        Nhà xuất bản
        <small>advanced Nhà xuất bản</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        @*<li><a href="#">Tables</a></li>*@
        <li class="active">Nhà xuất bản</li>
    </ol>
</section>
<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <button type="button" onclick="return _clear();" class="btn btn-default" data-toggle="modal" data-target="#myModal">
                        Thêm mới
                    </button>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>STT</th>
                                <th>Tên NXB</th>
                                <th>Địa chỉ</th>
                                <th>Số điện thoại</th>
                                <th>Email</th>
                                <th>Option</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                    int stt = 0;

                                    foreach (var item in Model)
                                    {
                                    <tr>
                                        <td>@Html.Raw(stt=stt+1)</td>
                                        <td>@item.tennxb</td>
                                        <td>@item.diachi</td>
                                        <td>@item.dienthoai</td>
                                        <td>@item.email</td>
                                        <td>
                                            <button onclick="return _getById('@item.manxb');" class="btn btn-success btn-sm">Edit</button>
                                            <button onclick="return _delete('@item.manxb');" class="btn btn-danger btn-sm">Delete</button>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</section>


<div class="modal fade" id="myModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title">Default Modal</h4>
            </div>
            <div class="modal-body">
                <input type="text" id="manxb" class="form-control" />
                <br />
                <label>Tên NCC</label>
                <input type="text" id="tennxb" class="form-control" />
                <label class="label label-danger" id="er_tennxb"></label>
                <br />
                <label>Đia chi</label>
                <input type="text" id="diachi" class="form-control" />
                <label class="label label-danger" id="er_diachi"></label>
                <br />
                <label>Điện thoại</label>
                <input type="text" id="dienthoai" class="form-control" />
                <label class="label label-danger" id="er_dienthoai"></label>
                <br />
                <label>Email</label>
                <input type="text" id="email" class="form-control" />
                <label class="label label-danger" id="er_email"></label>
                <br />

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Close</button>
                <button type="button" id="btnAdd" onclick="return _add();" class="btn btn-primary">Save changes</button>
                <button type="button" id="btnUpdate" onclick="return _edit();" class="btn btn-primary">Update</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>

<script src="~/scripts/nxb.js"></script>